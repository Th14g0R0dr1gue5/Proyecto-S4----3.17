import javax.swing.JOptionPane;

public class Main {
    public static void main(String[] args) {
        // Crear perfil con valores iniciales (serán sobreescritos)
        PerfilMedico perfilMedico1 = new PerfilMedico("Paul", "Walker", "Masculino", 12, 9, 1973, 188, 78);

        perfilMedico1.setPrimerNombre(JOptionPane.showInputDialog("Primer Nombre:"));
        perfilMedico1.setApellido(JOptionPane.showInputDialog("Apellido:"));
        perfilMedico1.setSexo(JOptionPane.showInputDialog("Sexo:"));
        perfilMedico1.setDiaNacimiento(Integer.parseInt(JOptionPane.showInputDialog("Día de nacimiento:")));
        perfilMedico1.setMesNacimiento(Integer.parseInt(JOptionPane.showInputDialog("Mes de nacimiento:")));
        perfilMedico1.setAñoNacimiento(Integer.parseInt(JOptionPane.showInputDialog("Año de nacimiento:")));
        perfilMedico1.setAltura(Double.parseDouble(JOptionPane.showInputDialog("Altura (cm):")));
        perfilMedico1.setPeso(Double.parseDouble(JOptionPane.showInputDialog("Peso (kg):")));

        int edad = perfilMedico1.CalcularEdad();
        double bmi = perfilMedico1.calcularBMI();
        String clasificacionBMI = perfilMedico1.clasificarBMI();
        int fcm = perfilMedico1.calcularFCM();
        String rangoFC = perfilMedico1.calcularRangoFC();

        // Armar el resultado en una sola ventana
        String resultado = String.format("""
                --- Información del Paciente ---
                Nombre: %s %s
                Sexo: %s
                Fecha de nacimiento: %02d/%02d/%d
                Altura: %.2f cm
                Peso: %.2f kg
                --- Resultados ---
                Edad: %d años
                Índice de Masa Corporal (BMI): %.2f
                Clasificación del BMI: %s
                Frecuencia Cardiaca Máxima: %d bpm
                Rango esperado de Frecuencia Cardiaca: %s
 
                --- Tabla de valores del BMI ---
                Bajo peso: menos de 18.5
                Normal: entre 18.5 y 24.9
                Sobrepeso: entre 25 y 29.9
                Obeso: 30 o más
                """,
                perfilMedico1.getPrimerNombre(),
                perfilMedico1.getApellido(),
                perfilMedico1.getSexo(),
                perfilMedico1.getDiaNacimiento(),
                perfilMedico1.getMesNacimiento(),
                perfilMedico1.getAñoNacimiento(),
                perfilMedico1.getAltura(),
                perfilMedico1.getPeso(),
                edad,
                bmi,
                clasificacionBMI,
                fcm,
                rangoFC
        );

        JOptionPane.showMessageDialog(null, resultado);
    }
}
